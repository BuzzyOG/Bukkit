package io.github.itachi1706.NickNamer;

import org.bukkit.event.EventHandler;
import org.bukkit.event.Listener;
import org.kitteh.tag.PlayerReceiveNameTagEvent;

public class Nick implements Listener {

	@EventHandler(priority=EventPriority.HIGH)
	public void initNameTag(PlayerReceiveNameTagEvent e){
		if (e.getPlayer().getName().equals(e.getPlayer().getName())){
			e.setTag(Main.nick.getString(e.getPlayer().getName()));
		}
	}
}
